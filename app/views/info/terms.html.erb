<% unless request.xhr? %>
  <%= render partial: 'shared/welcome_message', locals: { message: @property.title } %>
  <%= render 'shared/slider' %>
<% end %>
<!-- Start terms -->
<section class="terms" id='content'>
  <div class="container">  
    <hr class="divider-home">              
    <div class="row">
      <div class="span3">
        <div class="section-overview">
          <h5><span><i class="icon-minus"></i></span> Terms</h5>  
          <hr>
          <%= render 'shared/left_nav' %>
        </div>
      </div>
      <div class="span9">
        <% @articles.each do | article | %>
          <h3><%= article.title %></h3>
          <%= article.description %>
        <% end %>
      </div>
    </div>
  </div>
</section>
<!-- End terms -->

